.Slider {
    position: absolute;
    width: 100%;
    height: 100%;
    visibility: visible;
    opacity: 0.12;
    display: flex;
    flex-shrink: 1;
    flex-grow: 1;
    flex-basis: 100%;
    flex-direction: row;
    flex-wrap: nowrap;
    margin-left: 0;
    margin-right: 0;
    margin-top: 0;
    margin-bottom: 0;
    overflow: hidden;
}

.maxField {
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    opacity: 1;
    margin-right: 4px;
}
